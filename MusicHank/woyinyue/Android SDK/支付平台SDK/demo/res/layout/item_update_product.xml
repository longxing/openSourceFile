<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/updateProductItemImageView"
            android:layout_marginRight="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/updateProductItemSubTextView"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/updateProductItemButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/updateProductItemTitleTextView"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/updateProductItemImageView"
            android:layout_toLeftOf="@+id/updateProductItemButton"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_marginRight="5dp"
            android:id="@+id/updateProductItemAmountTextView"
            android:layout_below="@+id/updateProductItemTitleTextView"
            android:layout_toLeftOf="@+id/updateProductItemButton"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/updateProductItemSubTextView"
            android:layout_alignTop="@+id/updateProductItemAmountTextView"
            android:layout_toRightOf="@+id/updateProductItemImageView"
            android:layout_toLeftOf="@+id/updateProductItemAmountTextView"/>
</RelativeLayout>